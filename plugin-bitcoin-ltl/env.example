# Bitcoin Intelligence Plugin Configuration
# Copy this file to .env and fill in your API keys

# ============================================================================
# API KEYS & ENDPOINTS
# ============================================================================

# CoinGecko API (Free tier available)
COINGECKO_API_KEY=your_coingecko_api_key_here
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3

# Blockchain.info API (Free)
BLOCKCHAIN_API_KEY=your_blockchain_api_key_here
BLOCKCHAIN_BASE_URL=https://api.blockchain.info

# Mempool.space API (Free)
MEMPOOL_BASE_URL=https://mempool.space/api

# Alternative.me API (Free)
ALTERNATIVE_BASE_URL=https://api.alternative.me

# Glassnode API (Paid - for on-chain analytics)
GLASSNODE_API_KEY=your_glassnode_api_key_here
GLASSNODE_BASE_URL=https://api.glassnode.com/v1/metrics

# Yahoo Finance API (Free)
YAHOO_FINANCE_BASE_URL=https://query1.finance.yahoo.com/v8/finance/chart

# Alpha Vantage API (Free tier available)
ALPHA_VANTAGE_API_KEY=your_alphavantage_api_key_here
ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co/query

# FRED API (Free tier available)
FRED_API_KEY=your_fred_api_key_here
FRED_BASE_URL=https://api.stlouisfed.org/fred/series/observations

# ============================================================================
# RATE LIMITING & PERFORMANCE
# ============================================================================

# Rate limits (requests per minute)
COINGECKO_RATE_LIMIT=50
BLOCKCHAIN_RATE_LIMIT=30
MEMPOOL_RATE_LIMIT=60
ALTERNATIVE_RATE_LIMIT=30
GLASSNODE_RATE_LIMIT=10
YAHOO_FINANCE_RATE_LIMIT=100
ALPHA_VANTAGE_RATE_LIMIT=5
FRED_RATE_LIMIT=120

# Cache timeouts (seconds)
NETWORK_DATA_CACHE_TIMEOUT=300
MARKET_DATA_CACHE_TIMEOUT=600
INSTITUTIONAL_DATA_CACHE_TIMEOUT=3600
SENTIMENT_DATA_CACHE_TIMEOUT=1800

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable real-time updates
ENABLE_REALTIME_UPDATES=true

# Enable opportunity detection
ENABLE_OPPORTUNITY_DETECTION=true

# Enable cycle analysis
ENABLE_CYCLE_ANALYSIS=true

# Enable institutional tracking
ENABLE_INSTITUTIONAL_TRACKING=true

# Enable on-chain analytics (requires Glassnode)
ENABLE_ONCHAIN_ANALYTICS=false

# ============================================================================
# THRESHOLDS & ALERTS
# ============================================================================

# Network thresholds
HIGH_FEE_RATE_THRESHOLD=50
CONGESTED_MEMPOOL_THRESHOLD=50
EXTREME_MVRV_THRESHOLD=3.5
SIGNIFICANT_FLOW_THRESHOLD=1000

# Market thresholds
ALTCOIN_SEASON_THRESHOLD=75
FEAR_GREED_EXTREME_THRESHOLD=25
CORRELATION_THRESHOLD=0.7

# Institutional thresholds
CORPORATE_ADOPTION_THRESHOLD=70
SOVEREIGN_ADOPTION_THRESHOLD=30
BANKING_ADOPTION_THRESHOLD=60

# ============================================================================
# LOGGING & DEBUGGING
# ============================================================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable API request logging
ENABLE_API_LOGGING=false

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================

# Use mock data for testing
USE_MOCK_DATA=false

# Enable test mode
TEST_MODE=false

# Development API endpoints (if different)
DEV_COINGECKO_BASE_URL=https://api.coingecko.com/api/v3
DEV_BLOCKCHAIN_BASE_URL=https://api.blockchain.info 